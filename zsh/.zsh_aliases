# Emacs aliases
alias spacemacs="HOME=$HOME/spacemacs emacs"
alias spaceclient="HOME=$HOME/spacemacs emacsclient -c -a 'emacs'"
alias emcl="emacsclient -c -a 'emacs'"
alias emclt="emacsclient -c -t -a 'emacs -nw'"

alias cnvim="nvim --listen /tmp/nvim_${USER}_socket"

alias ssh="TERM=rxvt ssh"

alias dpose="docker-compose"

# Other aliases
alias vbox_enable="please rcvboxdrv setup"
alias xup="xrdb ~/.Xresources"

alias available_wifi_networks="nmcli dev wifi list"
alias wifi-connect="sudo ip link set wlp8s0 down && sudo wifi-menu"
alias openwee="urxvt -e weechat"
alias weather_here="curl -4 http://wttr.in/Chapeco"

alias ohrust="rustc --explain"
alias cssemester="cd $CSSEMESTER"
alias engage="systemctl --user start"
alias reengage="systemctl --user restart"
alias disengage="systemctl --user stop"

# Screen setup
alias xsc_reading="xrandr --output LVDS1 --primary --right-of HDMI1 --auto --output HDMI1 --rotate left --auto"
alias xsc_watching="xrandr --output HDMI1 --primary --rotate normal --auto --output LVDS1 --off"
alias xsc_dual="xrandr --output HDMI1 --primary --rotate normal --auto --output LVDS1 --below HDMI1 --auto"
